{
    "build":{
        "filename": "auto-gen-config",
        "stages": 2,
        "stage_list": "stage0 stage1 stage2",
        "img_name": "raspbios-trixie-arm64",
        "pi_gen_release": "Raspberry Pi Lite",
        "release": "trixie",

        "locale_default": "en_GB.UTF-8",
        "keyboard_keymap": "gb",
        "keyboard_layout": "English (UK)",
        "timezone_default": "Europe/London",

        "target_hostname": "raspberrypi",
        "first_user_name": "pi",
        "first_user_pass": "password",

        "enable_ssh": 1

    },

    "git":{
        "name": "pi-gen",
        "url": "https://github.com/RPI-Distro/pi-gen.git",
        "branch": "arm64",
        "tag": "none",
        "local_script":"pi-gen/build-docker.sh"
    },

    "docker":{
        "name": "cicd_pi_gen",
        "base": "debian:trixie",
        "platform": "linux/arm64",
        "build_context": "src/",
        "container_name": "cicd_pi_gen"
    }
}
